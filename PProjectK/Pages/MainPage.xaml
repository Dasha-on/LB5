<Page x:Class="PProjectK.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PProjectK.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
               Text="Работа с базой данных"
               Foreground="#FFFFFF"
               FontSize="36"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="20"/>

        <StackPanel Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Button Content="Учетная таблица"
                Click="Button_Click"
                Foreground="#FFFFFF"
                Background="#D32F2F"
                FontSize="20"
                FontWeight="Bold"
                Padding="20,10"
                Margin="10"
                Width="250"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Справочные таблицы"
                Click="Button_Click_1"
                Foreground="#FFFFFF"
                Background="#D32F2F"
                FontSize="20"
                FontWeight="Bold"
                Padding="20,10"
                Margin="10"
                Width="250"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Выгрузка в EXCEL"
                Click="Button_Click_2"
                Foreground="#FFFFFF"
                Background="#D32F2F"
                FontSize="20"
                FontWeight="Bold"
                Padding="20,10"
                Margin="10"
                Width="250"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Выход"
                Click="Button_Click_3"
                Foreground="#000000"
                Background="#FFFFFF"
                FontSize="20"
                FontWeight="Bold"
                Padding="20,10"
                Margin="30"
                Width="200"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>
    </Grid>
</Page>
