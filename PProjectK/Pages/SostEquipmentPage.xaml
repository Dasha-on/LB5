<Page x:Class="PProjectK.Pages.SostEquipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PProjectK.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SostEquipmentPage" Loaded="Page_Loaded">

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="SportDG"
              Grid.Row="0"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              HorizontalAlignment="Stretch"
              Background="#333"
              Foreground="Black"
              BorderThickness="0"
              HorizontalGridLinesBrush="#555"
              VerticalGridLinesBrush="#555">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер состояния спортивного инвентаря"
                                Binding="{Binding IDCoundition}"
                                Width="*"
                                Foreground="Black"
                                FontSize="16"/>
                <DataGridTextColumn Header="Состояние"
                                Binding="{Binding Coundition}"
                                Width="*"
                                Foreground="Black"
                                FontSize="16"/>

                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Изменить"
                                Click="Edit_Click"
                                Foreground="Black"
                                Background="#D32F2F"
                                FontSize="16"
                                FontWeight="Bold"
                                Padding="10,5"
                                Margin="5"
                                Width="100"
                                BorderThickness="0"
                                Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Background="Transparent"
                Margin="10">

            <Button x:Name="AddBtn"
                Content="Добавить"
                Click="AddBtn_Click"
                Foreground="#FFFFFF"
                Background="#2196F3"
                FontSize="16"
                FontWeight="Bold"
                Padding="10,5"
                Margin="5"
                Width="100"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="DelBtn"
                Content="Удалить"
                Click="DelBtn_Click"
                Foreground="#FFFFFF"
                Background="#F44336"
                FontSize="16"
                FontWeight="Bold"
                Padding="10,5"
                Margin="5"
                Width="100"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="BackBtn"
                Content="Назад"
                Click="BackBtn_Click"
                Foreground="#FFFFFF"
                Background="#607D8B"
                FontSize="16"
                FontWeight="Bold"
                Padding="10,5"
                Margin="5"
                Width="100"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>
    </Grid>
</Page>
