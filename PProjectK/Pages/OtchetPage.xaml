<Page x:Class="PProjectK.Pages.OtchetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PProjectK.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OtchetPage">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="OthcetDG"
              Grid.Row="0"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              HorizontalAlignment="Stretch"
              Background="#333"
              Foreground="Black"
              BorderThickness="0"
              HorizontalGridLinesBrush="#555"
              VerticalGridLinesBrush="#555">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название спорт. инвентаря"
                                Binding="{Binding NameEuipment}"
                                Width="*"
                                Foreground="Black"
                                FontSize="14"/>
                <DataGridTextColumn Header="Кол-во"
                                Binding="{Binding Count}"
                                Width="*"
                                Foreground="Black"
                                FontSize="14"/>
                <DataGridTextColumn Header="Состояние"
                                Binding="{Binding CounditionEquipment.Coundition}"
                                Width="*"
                                Foreground="Black"
                                FontSize="14"/>
                <DataGridTextColumn Header="Вид спорта"
                                Binding="{Binding VidSport.NameSport}"
                                Width="*"
                                Foreground="Black"
                                FontSize="14"/>
                <DataGridTextColumn Header="Здание"
                                Binding="{Binding Bild.NameBild}"
                                Width="*"
                                Foreground="Black"
                                FontSize="14"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Background="Transparent"
                Margin="10">

            <Button x:Name="Addbuton"
                Content="EXEL"
                Click="Otchet_Click"
                Foreground="#FFFFFF"
                Background="#27ae60"
                FontSize="16"
                FontWeight="Bold"
                Padding="8,4"
                Margin="4"
                Width="80"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Назад"
                Click="Back_Click"
                Foreground="#FFFFFF"
                Background="#e74c3c"
                FontSize="16"
                FontWeight="Bold"
                Padding="8,4"
                Margin="4"
                Width="80"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>

</Page>
