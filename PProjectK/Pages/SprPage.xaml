<Page x:Class="PProjectK.Pages.SprPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PProjectK.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SprPage">

    <Grid Background="#1E1E1E">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Здания"
                Click="Button_Click"
                Foreground="#FFFFFF"
                Background="#D32F2F"
                FontSize="20"
                FontWeight="Bold"
                Padding="10,5"
                Margin="5"
                Width="300"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Состояния спортивного инвентаря"
                Click="Button_Click_1"
                Foreground="#FFFFFF"
                Background="#D32F2F"
                FontSize="20"
                FontWeight="Bold"
                Padding="10,5"
                Margin="5"
                Width="300"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Виды спорта"
                Click="Button_Click_2"
                Foreground="#FFFFFF"
                Background="#D32F2F"
                FontSize="20"
                FontWeight="Bold"
                Padding="10,5"
                Margin="5"
                Width="300"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Назад"
                Click="Button_Click_3"
                Foreground="Black"
                Background="#FFFFFF"
                FontSize="20"
                FontWeight="Bold"
                Padding="10,5"
                Margin="5"
                Width="300"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Page>
