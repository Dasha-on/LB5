<Page x:Class="PProjectK.Pages.SportEquipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PProjectK.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SportEquipmentPage" Loaded="Page_Loaded">

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="SportDG"
              Grid.Row="0"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              HorizontalAlignment="Stretch"
              Background="#333"
              Foreground="Black"
              BorderThickness="0"
              HorizontalGridLinesBrush="#555"
              VerticalGridLinesBrush="#555">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер спортивного инвентаря"
                                Binding="{Binding IDSportEquipment}"
                                Width="*"
                                Foreground="Black"
                                FontSize="14"/>
                <DataGridTextColumn Header="Название"
                                Binding="{Binding NameEuipment}"
                                Width="*"
                                Foreground="Black"
                                FontSize="14"/>
                <DataGridTextColumn Header="Количество"
                                Binding="{Binding Count}"
                                Width="*"
                                Foreground="Black"
                                FontSize="14"/>
                <DataGridTextColumn Header="Cостояние инвентаря"
                                Binding="{Binding CounditionEquipment.Coundition}"
                                Width="*"
                                Foreground="Black"
                                FontSize="14"/>
                <DataGridTextColumn Header="Вид спорта"
                                Binding="{Binding VidSport.NameSport}"
                                Width="*"
                                Foreground="Black"
                                FontSize="14"/>
                <DataGridTextColumn Header="Здание"
                                Binding="{Binding Bild.NameBild}"
                                Width="*"
                                Foreground="Black"
                                FontSize="14"/>

                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Изменить"
                                Click="Edit_Click"
                                Foreground="Black"
                                Background="#D32F2F"
                                FontSize="14"
                                FontWeight="Bold"
                                Padding="8,4"
                                Margin="4"
                                Width="80"
                                BorderThickness="0"
                                Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Background="Transparent"
                Margin="10">

            <Button x:Name="AddBtn"
                Content="Добавить"
                Click="AddBtn_Click"
                Foreground="#FFFFFF"
                Background="#2196F3"
                FontSize="14"
                FontWeight="Bold"
                Padding="8,4"
                Margin="4"
                Width="86"
                BorderThickness="0"
                Cursor="Hand"
                    Height="40">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="DelBtn"
                Content="Удалить"
                Click="DelBtn_Click"
                Foreground="#FFFFFF"
                Background="#F44336"
                FontSize="14"
                FontWeight="Bold"
                Padding="8,4"
                Margin="4"
                Width="80"
                BorderThickness="0"
                Cursor="Hand" Height="40">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="BackBtn"
                Content="Назад"
                Click="BackBtn_Click"
                Foreground="#FFFFFF"
                Background="#607D8B"
                FontSize="14"
                FontWeight="Bold"
                Padding="8,4"
                Margin="4"
                Width="80"
                BorderThickness="0"
                Cursor="Hand" Height="40">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBox  x:Name="Poisk" Grid.Column="1" Grid.Row="2"  FontSize="15" Margin="10,20,10,20" Foreground="#333" Width="173" Height="34" TextChanged="Poisk_TextChanged"/>
        </StackPanel>
    </Grid>
</Page>
